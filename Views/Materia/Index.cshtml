@model IEnumerable<Guia8Program_II.Models.Materia>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unidadValorativas)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.codMateria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.unidadValorativas)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.codMateria }) |
                    @Html.ActionLink("Details", "Details", new { id = item.codMateria }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.codMateria })
                </td>
            </tr>
        }

    </table>
</body>
</html>
