@{
    ViewBag.Title = "Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Estudiantes</title>
</head>
<body>

    <div class="p-4">
        <div class="container">
            <div class="row">
                <div class="card shadow">

                    <div class="table-responsive">
                        <div style="display:flex;">

                            <div class="m-2">

                                <a href="~/Home/Index" class="btn btn-warning btn-sm">

                                    <img src="~/img/arrow-arc-left.svg" width="20" />
                                    Regresar
                                </a>
                            </div>

                            <div class="m-2">
                                <a href="~/Alumno/Agregar" class="btn btn-success btn-sm">
                                    <img src="~/img/add.svg" width="20" />
                                    Agregar
                                </a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class=" table table-sm table-hover">

                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Carnet
                                        </th>
                                        <th scope="col">
                                            Nombre
                                        </th>
                                        <th scope="col">
                                            Apellido
                                        </th>
                                        <th scope="col">
                                            Direccion
                                        </th>
                                        <th scope="col">
                                            Sexo
                                        <th scope="col">
                                            Telefono
                                        </th>
                                        <th scope="col">
                                            Email
                                        </th>
                                        <th scope="col">
                                            Acciones
                                        </th>
                                    </tr>
                                </thead>


                                @foreach (var alumnos in Model)
                                {

                                    <tbody>
                                        <tr>
                                            <td>
                                                @alumnos.Carnet
                                            </td>
                                            <td>
                                                @alumnos.Nombres
                                            </td>
                                            <td>
                                                @alumnos.Apellidos
                                            </td>
                                            <td>
                                                @alumnos.Direccion

                                            </td>
                                            <td>
                                                @alumnos.Sexo

                                            </td>
                                            <td>
                                                @alumnos.Telefono

                                            </td>
                                            <td>
                                                @alumnos.Email

                                            </td>

                                            <td>
                                                <a href="/Alumno/Eliminar?carnet=@alumnos.Carnet" class="btn btn-danger btn-sm">
                                                    Eliminar
                                                </a>

                                            </td>
                                            <td>
                                                <a href="/Alumno/Editar?carnet=@alumnos.Carnet" class="btn btn-warning btn-sm">
                                                    Editar
                                                </a>
                                            </td>

                                        </tr>

                                    </tbody>

                                }

                            </table>

                        </div>


                    </div>


                </div>
            </div>

        </div>

    </div>

</body>
</html>
